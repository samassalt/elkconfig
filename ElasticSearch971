#

FROM docker.elastic.co/elasticsearch/elasticsearch:5.5.0

LABEL version="1.0" \
      maintainer="Stephan Massalt"

RUN curl https://raw.githubusercontent.com/samassalt/elkconfig/master/init/elasticsearch.yml > /usr/share/elasticsearch/config/elasticsearch.yml \
    curl https://raw.githubusercontent.com/samassalt/elkconfig/master/init/log4j2.properties > /usr/share/elasticsearch/config/log4j2.properties

EXPOSE 9200:9200

VOLUME /usr/share/elasticsearch/data/
